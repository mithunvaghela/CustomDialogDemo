<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LabelStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/input_label_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.EZazi.Text.Dialog.Title" parent="@style/LabelStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">@dimen/input_height</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/btn_blue_color_selector</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="Theme.Button.White" parent="Theme.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="rippleColor">@color/gray_2</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/gray_2</item>
        <item name="strokeWidth">@dimen/input_stroke_size</item>
    </style>

    <style name="Theme.Dialog.Button.Cancel" parent="Theme.Button.White">
        <item name="android:textSize">@dimen/dialog_btn_text_size</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:paddingTop">@dimen/actionbar_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/actionbar_vertical_padding</item>
    </style>

    <style name="Theme.Dialog.Button.Next" parent="Theme.Button">
        <item name="android:textSize">@dimen/dialog_btn_text_size</item>
        <item name="android:paddingTop">@dimen/actionbar_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/actionbar_vertical_padding</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/round_corner_gray_stroke_light</item>
        <item name="android:textSize">@dimen/small_input_text_size</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:padding">@dimen/screen_container_padding</item>
    </style>
</resources>